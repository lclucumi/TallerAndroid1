<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaImagenes">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="10dp"
        android:text="Ahora, estás en el Scroll de memes de la App. Desliza
        hacia la derecha e izquierda para la visualización."
        android:textSize="40px" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_marginLeft="2px"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="600px"
                android:layout_height="600px"
                android:layout_marginTop="0px"
                app:srcCompat="@mipmap/uno" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="600px"
                android:layout_height="600px"
                android:layout_marginTop="0px"
                app:srcCompat="@mipmap/dos" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="600px"
                android:layout_height="600px"
                android:layout_marginTop="0px"
                app:srcCompat="@mipmap/tres" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="600px"
                android:layout_height="600px"
                android:layout_marginTop="0px"
                app:srcCompat="@mipmap/cuatro" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="600px"
                android:layout_height="600px"
                android:layout_marginLeft="62dp"
                app:srcCompat="@mipmap/cinco" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="2px"
        android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="600px"
                android:layout_height="600px"
                android:layout_marginTop="0px"
                app:srcCompat="@mipmap/unodos" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="600px"
                android:layout_height="600px"
                android:layout_marginTop="0px"
                app:srcCompat="@mipmap/dosdos" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="600px"
                android:layout_height="600px"
                android:layout_marginTop="0px"
                app:srcCompat="@mipmap/tresdos" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="600px"
                android:layout_height="600px"
                android:layout_marginTop="0px"
                app:srcCompat="@mipmap/cuatrodos" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btnTrayectoria"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:onClick="trayectoria"
        android:text="VIDEOS" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.univalle20202.LogoutFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>


</LinearLayout>